<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text">
        <item name="android:fontFamily">@font/aldrich</item>
        <item name="android:textColor">#D5FFFFFF</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="headline" parent="text">
        <item name="android:lineSpacingExtra">12sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:lineSpacingExtra">12sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="radio_button_male_style">
        <item name="android:buttonTint">#FFFFFF</item>
        <item name="android:drawableEnd">@drawable/human_male</item>
        <item name="android:drawableTint">#FFFFFF</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="radio_button_female_style">
        <item name="android:buttonTint">#FFFFFF</item>
        <item name="android:drawableEnd">@drawable/human_female</item>
        <item name="android:drawableTint">#FFFFFF</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="inputAgeStyle" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:drawableTint">#D5FFFFFF</item>
        <item name="android:fontFamily">@font/aldrich</item>
        <item name="android:foregroundTint">#D5FFFFFF</item>
        <item name="android:outlineAmbientShadowColor">#D5FFFFFF</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#D5FFFFFF</item>
        <item name="android:textColorHint">#D5FFFFFF</item>
        <item name="android:textColorLink">#D5FFFFFF</item>
        <item name="android:textCursorDrawable">@color/white</item>
        <item name="colorControlNormal">#D5FFFFFF</item>
        <item name="colorControlActivated">#D5FFFFFF</item>
        <item name="android:textSize">26sp</item>
    </style>

</resources>